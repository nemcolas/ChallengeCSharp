@using Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<OdontoPrevCSharp.Models.Consulta>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DataConsulta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoConsulta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Custo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StatusSinistro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Paciente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dentista)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DataConsulta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoConsulta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Custo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StatusSinistro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Paciente.IdPaciente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dentista.IdDentista)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdConsulta">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdConsulta">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdConsulta">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
